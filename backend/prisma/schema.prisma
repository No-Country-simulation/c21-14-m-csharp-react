generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id              Int      @id @default(autoincrement())
  name            String
  email           String   @unique
  phone           String   @unique
  password        String
  country         String
  documentId      String           
  profileUrl      String? 
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt @default(now())
  investments     Investment[]
}

model Admin {
  id              Int    @id @default(autoincrement())
  name            String
  username        String @unique
  email           String @unique
  phone           String @unique
  password        String
  properties      Property[]
}


model Property {
  id              Int     @id @default(autoincrement())
  adminId         Int
  createdBy       Admin   @relation(fields: [adminId], references: [id])
  name            String  @unique
  type            Type
  country         String
  city            String
  location        String
  description     String
  minAmount       Int
  area            Int
  time            Int
  profit          Int
  status          String
  photosUrl       String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  investments     Investment[]
}

enum Type {
  residencial
  commercial
  industrial
}

model Investment {
  id              Int      @id @default(autoincrement())
  propertyId      Int
  property        Property @relation(fields: [propertyId], references: [id])
  userId          Int 
  investor        User     @relation(fields: [userId], references: [id])
  date            DateTime @default(now())
  amount          Int 
}










